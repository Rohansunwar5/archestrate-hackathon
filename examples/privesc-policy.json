{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DangerousPassRole",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole",
                "iam:CreateRole",
                "sts:AssumeRole"
            ],
            "Resource": "*"
        },
        {
            "Sid": "FullAdmin",
            "Effect": "Allow",
            "Action": "*",
            "Resource": "*"
        },
        {
            "Sid": "BroadDataAccess",
            "Effect": "Allow",
            "Action": [
                "s3:*",
                "dynamodb:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "SensitiveServices",
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt",
                "kms:Encrypt",
                "secretsmanager:GetSecretValue",
                "cloudtrail:StopLogging"
            ],
            "Resource": "*"
        }
    ]
}